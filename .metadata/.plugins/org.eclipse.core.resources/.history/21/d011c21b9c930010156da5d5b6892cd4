package day4;

public class LargestOf3Number {

	public static void main(String[] args) {
		int a =100, b=20, c=30; 
		
		if(a>b && a>c) {
			System.out.println("a is largest with a number of "+ a );
		}else if (b>a && b>c) {
			System.out.println("b is largest with the number of "+ b);
		}else {
			System.out.println("c is largest  with the number of "+ c);
		}

	}

}
